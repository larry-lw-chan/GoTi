{{ define "app" }}

<!DOCTYPE html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ block "title" .}}{{ end }}</title>

    <link rel="icon" href="/assets/images/favicon.svg" type="image/x-icon" />

    <!-- Eventually we will allow custom Pico themes editing a config file -->
    <link rel="stylesheet" href="/assets/css/themes/pico.min.css" />
    <link rel="stylesheet" href="/assets/css/global.css" />
    <link rel="stylesheet" href="/assets/css/app.css" />
  </head>
  <body>
    <header>
      <div class="logo">
        <a href="/users/profile">
          <img src="/assets/images/logoIcon.svg" alt="Logo" />
        </a>
      </div>
      <nav id="primary-nav">
        <ul class="links">
          <li><a href="/users/profile">Home</a></li>
          <li><a href="/#">Search</a></li>
          <li><a href="/#">Write</a></li>
          <li><a href="/#">Activity</a></li>
          <li><a href="/#">Profile</a></li>
        </ul>
      </nav>
      <div id="menu">
        <div class="hamburger">
          <div class="bar1"></div>
          <div class="bar2"></div>
          <div class="bar3"></div>
        </div>
        <ul class="links">
          <li><a href="/#">Placeholder 1</a></li>
          <li><a href="/#">Placeholder 2</a></li>
          <li><a href="/#">Placeholder 3</a></li>
          <li><a href="/#">Placeholder 4</a></li>
          <li><a href="/auth/logout">Logout</a></li>
        </ul>
      </div>
    </header>

    <main>
      <div class="container">
        {{ if .Flash.Message }}
        <div class="flash {{ .Flash.Type }}">
          {{ .Flash.Message }}
        </div>
        {{ end }}

        {{ template "content" .}}
      </div>
    </main>

    <!-- All Style Scripts Here -->
    {{ block "style" .}}{{ end }}

    <!-- All JS Scripts Here -->
    <script src="/assets/scripts/global.js"></script>
    <script src="/assets/scripts/htmx.min.js"></script>
    <script src="/assets/scripts/just-validate.production.min.js"></script>
    {{ block "script" .}}{{ end }}
  </body>
</html>

{{ end }}
