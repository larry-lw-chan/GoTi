<div id="user-threads">
  {{ if .Threads }}
    {{ range .Threads }}
      <article class="thread">
        <aside class="thread__aside">
          {{ template "avatar" .Avatar }}
        </aside>
        <div class="thread__container">
          {{ template "username" . }}
          {{ template "thread-content" . }}
          {{ template "menu-icon-status" . }}
        </div>
      </article>
    {{ end }}
  {{ else }}
    <a href="/threads/new">
      <button>Start your first thread</button>
    </a>
  {{ end }}
</div>
