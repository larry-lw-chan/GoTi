{{ define "thread" }}
  <article class="thread">
    <aside class="thread__aside">
      {{ if .Avatar.Valid }}
        <div class="avatar">
          <img src="{{ .Avatar.String }}" alt="{{ .Avatar.String }}" />
        </div>
      {{ else }}
        <div class="avatar">
          <box-icon
            name="user"
            color="white"
            type="solid"
            size="2.5rem"
            class="avatar-placeholder__icon"
          ></box-icon>
        </div>
      {{ end }}
    </aside>
    <div class="thread__container">
      <h5 class="thread__username">
        <a href="/profiles/show/{{ .Username }}">{{ .Username }}</a>
      </h5>
      <div class="thread__content">
        <a href="/threads/show/{{ .ID }}" role="article">
          {{ .Content }}
        </a>
      </div>
      <div class="thread__interactive">
        <div class="thread__icons">
          <a
            href="#"
            hx-post="/threads/likes/{{ .ID }}"
            hx-target="closest .thread__interactive"
          >
            <box-icon
              name="heart"
              color="white"
              {{ if .Likes }}type="solid"{{ end }}
            ></box-icon>
          </a>
          <a href="#">
            <box-icon name="chat" color="white"></box-icon>
          </a>
          <a href="#">
            <box-icon name="repost" color="white"></box-icon>
          </a>
          <a href="#">
            <box-icon name="share" color="white"></box-icon>
          </a>
        </div>
        <div class="thread__status">
          <span class="thread__status__likes">
            {{ if .Likes }}
              {{ .Likes }} likes
            {{ else }}
              0 likes
            {{ end }}
          </span>
        </div>
      </div>
    </div>
  </article>
{{ end }}
